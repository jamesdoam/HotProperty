@model HotProperty_Web.Models.VM.PropertyNumberDeleteVM

<form asp-action="PropertyNumberDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Property Number</h1>
        <hr />
        <input hidden asp-for="PropertyNumber.PropertyNo" />
        <div class="row">

            <div class="col-2">
                <label asp-for="PropertyNumber.PropertyNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PropertyNumber.PropertyNo" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="PropertyNumber.PropertyID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="PropertyNumber.PropertyID" disabled class="form-select" asp-items="@Model.PropertyList">
                    <option disabled selected>--Select Property--</option>
                </select>
            </div>
            <div class="col-2">
                <label asp-for="PropertyNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="PropertyNumber.SpecialDetails" readonly class="form-control" rows="5"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="PropertyNumberIndex" asp-controller="PropertyNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}