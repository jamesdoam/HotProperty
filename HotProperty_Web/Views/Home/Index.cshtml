﻿@using Microsoft.AspNetCore.Components
@model IEnumerable<HotProperty_Web.Models.Dto.PropertyDTO>

<img class="d-block w-100" src="images/home/slide1.jfif" alt="">

<hr />
<div class="row" style="--bs-gutter-x:0">
    @foreach (var property in Model)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row" style="border-radius:5px; border: 1px solid #22a2a6">
                <div class="col-4">
                    <img class="d-block w-100" style="border-radius:20px;" src="@property.ImageUrl" alt="First slide">
                </div>
                <div class="col-8">
                    <p class="card-title text-warning" style="font-size:xx-large">@property.Name</p>
                    <p class="card-text">Number of BRs: @(property.NoBedroom)</p>
                </div>
                <div class="col-12">
                    <div class="row pb-3 pt-2">
                        <div class="col-4">
                            <a href="" class="btn btn-success form-control btn-block">Details</a>
                        </div>
                        <div class="col-4">
                            <span class="">Asking Price: @property.AskingPrice</span><br/>
                            <span class=" pt-1">State: @property.State</span><br />
                        </div>
                        <div class="col-4">
                            <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                USD
                                <span style="border-bottom:1px solid #ff6a00">
                                    
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>